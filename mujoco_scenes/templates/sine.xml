<mujoco model="{name} sine scene">
  <include file="{path}" />

  <statistic center="0.15 0.1 0.38" extent=".8" meansize="0.05" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0.5 0.5 0.5" />
    <global azimuth="220" elevation="-10" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <texture
      type="skybox"
      builtin="gradient"
      rgb1="0.9 0.9 0.9"
      rgb2="0.9 0.9 0.9"
      width="512"
      height="3072"
    />

    <texture
      name="sine_hfield"
      type="2d"
      file="assets/sine_hfield.png"
      width="256"
      height="256"
    />

    <material
      name="terrain"
      texture="sine_hfield"
      texrepeat="1 1"
      specular="0.7"
      shininess="0.3"
      reflectance="0.1"
      rgba="0.9 0.9 0.9 1"
    />
    <hfield name="hfield" file="assets/sine_hfield.png" size="10 10 0.1 0.1"/>
  </asset>

  <worldbody>
    <light 
      name="sun" 
      directional="true"
      dir="-0.5 -0.4 -1" 
      diffuse="0.9 0.9 0.9"
      specular="0.99 0.99 0.99" 
      ambient="0.02 0.02 0.02"
      castshadow="true"
    />

    <light
      name="spotlight1"
      mode="targetbodycom"
      target="base"
      diffuse="0.9 0.9 0.9"
      specular="0.3 0.3 0.3"
      pos="0 -10 4"
      cutoff="10"
    />

    <light
      name="spotlight2"
      mode="targetbodycom"
      directional="true"
      target="base"
      diffuse="0.9 0.9 0.9"
      specular="0.9 0.9 0.9"
      pos="10 0 4"
      dir="1 0 0"
      cutoff="10"
      castshadow="false"
    />

    <geom 
        name="floor" 
        type="hfield" 
        hfield="hfield" 
        contype="1"
        conaffinity="1"
        quat="1 0 0 0"
        pos="0 0 0" 
    />
  </worldbody>
</mujoco>
